<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/white" android:startColor="@color/gray_text" android:type="linear" />
        </shape>
    </item>
    <item android:state_focused="false">
        <shape>
            <stroke android:width="30dp" android:color="@color/transparent" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>
</selector>